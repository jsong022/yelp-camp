<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 class="col-sm-12" id="newCampHeader">Add a New Comment to <%=campground.name%></h1>
    <!-- Form will be sent in a POST HTTP request to /campgrounds -->
    <form action="/campgrounds/<%=campground._id%>/comments" method="POST" id="newCampForm">
      <div class="form-group">
        <input class="form-control" type="text" name="comment[author]" placeholder="Author"/>
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" placeholder="Text"/>
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-success" id="newCampButton">Submit</button>
      </div>
    </form>
  </div>
</div>
<% include ../partials/footer %>